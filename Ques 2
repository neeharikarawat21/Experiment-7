#include <stdio.h>

int main() {
    char name[100][50];
    float basic[100], da[100], gross[100];
    int n, i;

    printf("Enter number of employees: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter name of employee %d: ", i + 1);
        scanf("%s", name[i]);
        printf("Enter basic pay: ");
        scanf("%f", &basic[i]);

        da[i] = 0.52 * basic[i];
        gross[i] = basic[i] + da[i];
    }

    printf("\nEmployee Name\tGross Salary\n");
    printf("-------------------------------\n");
    for (i = 0; i < n; i++) {
        printf("%s\t\t%.2f\n", name[i], gross[i]);
    }

    return 0;
}